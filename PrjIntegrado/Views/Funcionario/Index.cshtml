@RenderPage("~/Views/Shared/Header.cshtml")
@RenderPage("~/Views/Shared/Menu.cshtml")
<div class="col-md-10 col-sm-10 col-xs-8">
    <div class="content">
        <div class="title">
            <h2>
                Funcionários
            </h2>
        </div>
        <form>
            <div class="input col-md-5">
                <input type="text" name="nome" class="form-control">
            </div>
            <div>
                <button type="submit" name="buscaNome" class="btn btn-primary">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </div>
        </form>
        <hr>
        <div>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Cargo</th>
                        <th>Loja</th>
                        <th>Alterar</th>
                        <th>Excluir</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Func)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.CPF</td>
                            <td>@item.Cargo</td>
                            <td>@item.LojaFuncionarioID</td>
                            <td style="text-align: center">
                                <form method="GET">
                                    <input type="hidden" name="id-atualizar" value="@item.FuncionarioID">
                                    <button type="submit" name="atualizar" class="btn btn-warning" name="@item.FuncionarioID" onclick="editar();">
                                        <span class="glyphicon glyphicon-edit"></span> Editar
                                    </button>
                                </form>
                            </td>
                            <td style="text-align: center">
                                <form action="#" method="GET">
                                    <input type="hidden" name="id-excluir" value="@item.FuncionarioID">
                                    <button type="submit" name="excluir" class="btn btn-danger" data-toggle="modal" data-target="#modalExcluir">
                                        <span class="glyphicon glyphicon-trash"></span> Excluir
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modalAdicionar" alt="Adicionar">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
    </div>
</div>
<div class="modal fade" id="modalAdicionar" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Adicionar Funcionário</h4>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("Create", "Funcionario")" method="POST" class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="" width="70%">
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <input type="hidden" name="id_funcionario" value="">
                                <label for="nome">Nome</label>
                                <input class="form-control" required maxlength="45" type="text" name="nome">
                                <label for="nome">CPF</label>
                                <input class="form-control" required maxlength="45" type="text" name="cpf">
                                <label for="nome">Cargo</label>
                                <input class="form-control" required maxlength="45" type="text" name="carrgo">
                                <label for="nome">Loja</label>
                                <select>
                                    @foreach (var item in ViewBag.List)
                                    {
                                        <option value="@item.LojaID">@item.LojaID</option>
                                    }
                                </select>
                            </div>
                            <br><br>
                        </div>
                    </div>
                    <div class="padding">
                        <input type="submit" name="cadastrar" value="Salvar" class="btn btn-info">
                        <button type="button" class="btn" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@RenderPage("~/Views/Shared/Footer.cshtml")
