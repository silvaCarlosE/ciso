@using PrjIntegrado.Models;

@{
    Tecnico aux = new Tecnico();
    aux = (Tecnico)ViewData["Tecnico"];
}

@{
    Layout = null;
}

@RenderPage("~/Views/Shared/Header.cshtml")
@RenderPage("~/Views/Shared/Menu.cshtml")
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Atualizar Técnico</h4>
</div>
<form action="@Url.Action("Save", "Tecnico")" method="POST" class="form-group">
    <div class="row padding">
        <div class="col-md-6">
            <!--Editar POSICAO--->
            <img src="~/Img/funcionario.png" />
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <input type="hidden" id="edit-tecnico" name="id_tecnico" value="@aux.Id">
                <label for="nome">Nome</label>
                <input class="form-control" required maxlength="45" type="text" name="nome" value="@aux.Nome">
                <label for="nome">CPF</label>
                <input class="form-control" required maxlength="45" type="text" name="cpf" value="@aux.Cpf">
            </div>
            <br><br>
        </div>
    </div>
    <div class="padding">
        <input type="submit" name="cadastrar" value="Salvar" class="btn btn-info">
        <button type="button" class="btn" data-dismiss="modal">Cancelar</button>
    </div>
</form>
@RenderPage("~/Views/Shared/Footer.cshtml")